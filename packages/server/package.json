{
  "name": "@mevn/server",
  "version": "0.0.1",
  "author": "Benjamin Macher",
  "description": "A simple express server.",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "concurrently --kill-others-on-fail 'npm:start:*'",
    "start:compile": "tsc --build tsconfig.build.json --watch",
    "start:nodemon": "nodemon dist/index.js",
    "build": "yarn clean && yarn compile",
    "compile": "tsc -b tsconfig.build.json",
    "clean": "rm -rf dist && rm -f tsconfig.build.tsbuildinfo"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/node": "^13.13.0",
    "nodemon": "^2.0.3",
    "typescript": "~3.4.5"
  }
}