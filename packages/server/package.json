{
  "name": "@mevn/server",
  "version": "0.0.1",
  "author": "Benjamin Macher",
  "description": "A simple express server.",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "concurrently --kill-others-on-fail 'npm:start:*'",
    "start:compile": "tsc --build tsconfig.build.json --watch",
    "start:nodemon": "nodemon dist/index.js --delay 2000ms",
    "build": "yarn clean && yarn compile",
    "compile": "tsc -b tsconfig.build.json",
    "clean": "rm -rf dist && rm -f tsconfig.build.tsbuildinfo",
    "lint": "eslint src/*",
    "lint:fix": "eslint src/* --fix"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/node": "^13.13.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "typescript": "~3.4.5"
  }
}